{
  "name": "vue_ssr",
  "version": "0.0.0",
  "scripts": {
    "dev": "node server.ts",
    "build:client": "vue-tsc --noEmit && vite build --outDir dist/client --ssrManifest",
    "build:server": "vue-tsc --noEmit && vite build --outDir dist/server --ssr ssr/entry-server.ts",
    "build": "npm run build:client && npm run build:server",
    "serve": "cross-env NODE_ENV=production node server.ts",
    "release": "node release.ts production"
  },
  "dependencies": {
    "express": "^4.17.2",
    "vue": "^3.2.25",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2",
    "axios": "^0.25.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.15",
    "@vitejs/plugin-vue": "^2.0.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "sass": "^1.49.7",
    "shelljs": "^0.8.5",
    "typescript": "^4.5.5",
    "vite": "^2.7.2",
    "vite-plugin-compression": "^0.5.1",
    "vue-tsc": "^0.29.8"
  }
}
